<h1 align="center">List of Users</h1>
<div align="center">


<%= will_paginate %>
<% @users.each do |user|%>
<div class="well">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= gravatar_for user, size: 150 %>
    </div>
  </div>
  <h4 align="center"><%= user.username %></h4>
  <%= link_to "delete the user", user_path(user), method: :delete,data: {confirm: "Are you shure to delete user with articles?"} if logged_in? and current_user.admin? %>
</div>
<% end %>
<%= will_paginate %>
</div>
